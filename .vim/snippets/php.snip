snippet     errlg
abbr        error_log
prev_word   '^'
    error_log(strftime("%Y-%m-%d %H:%m:%S ") . var_export(${1}, true) . "\n", 3, "/tmp/debug.log");

snippet     throwlog
abbr        throw_exception_log
prev_word   '^'
    try {
        throw new Exception('test');
    } catch (Exception $e) {
       error_log($e->getTraceAsString(), 3, "/tmp/debug.log");
    }
