snippet     errlg
abbr        error_log
prev_word   '^'
    error_log(date("Y/m/d H:i:s") . " file:" . __FILE__ . " line: " . __LINE__ . " dump: " . var_export(${1}, true) . "\n");

snippet     throwlog
abbr        throw_exception_log
prev_word   '^'
    try {
        throw new Exception('test');
    } catch (Exception $e) {
       error_log($e->getTraceAsString());
    }
